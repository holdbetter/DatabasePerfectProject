<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="24dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="100dp"
            android:layout_height="138dp"
            android:background="@drawable/image_background_shape"
            android:contentDescription="@string/bookImageDescriptor"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/future"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_bookmark"
            app:layout_constraintTop_toTopOf="@id/bookImage"
            app:layout_constraintLeft_toLeftOf="@id/bookImage"
            app:layout_constraintRight_toRightOf="@id/bookImage"
            app:layout_constraintHorizontal_bias="0.82"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/bookName"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Default"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_slab_regular"
        android:singleLine="true" />

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Default"
        android:textColor="#A3A2A2"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_slab_regular"/>

</LinearLayout>